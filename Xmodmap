keycode 87  = dead_grave        KP_1 KP_End KP_1
keycode 88  = dead_acute        KP_2 KP_Down KP_2
keycode 89  = dead_tilde        KP_3 KP_Next KP_3
keycode 83  = dead_circumflex   KP_4 KP_Left KP_4
keycode 84  = dead_diaeresis    KP_5 KP_Begin KP_5
keycode 85  = dead_stroke       KP_6 KP_Right KP_6
keycode 79  = dead_caron        KP_7 KP_Home KP_7
keycode 80  = dead_greek        KP_8 KP_Up KP_8
keycode 81  = dead_currency     KP_9 KP_Prior KP_9
